.top-headbar
    position fixed
    width 100%
    height 50px
    padding-left 5px
    padding-right 5px
    background-color black
    z-index 9999
    .headbar-container
        position absolute
        @media (min-width 769px)
            width 80%
            left 10%
            height 100%
        @media (max-width 768px)
            width 95%
            left 2.5%
            height 100%
    .logo
        position absolute
        min-width 30%
        max-width 50%
        height 100%
        @media (max-width 420px)
            max-width 60%
            width 60%
        a
            img
                max-width 100%
                max-height 80%
                @media (max-width 420px)
                    width 100%
                    height 80%
    .topbar-buttons
        position absolute
        top 0
        right 0    
        min-width 30%
        max-width 50%
        height 100%
        @media (max-width 768px)
            max-width 40%
            width 39%
        ul
            width 100%
            height 100%
            list-style none
            padding 0
            margin 0
            li
                float right 
                display inline-block
                min-width 50px
                height 100%
                border-left 1px solid #FFF
                padding-left 15px
                padding-right 15px
                &:first-child
                    border-right 1px solid #FFF
                a
                    font-size 1.2em
                    display block
                    line-height 50px
                    color #FFF
                    text-decoration none
                    span
                        @media (min-width 768px)
                            font-size 1em