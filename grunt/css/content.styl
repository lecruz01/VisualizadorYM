.main
    position relative
    width 100vw
    height 90vh
    padding-top 50px
    > div
        display inline-block
        height 100%
        vertical-align top
    .menu-bar
        width 30%
        border-right 1px solid #dddddd
        box-shadow 3px 0 5px #888
        .menu-bar-header
            width 100%
            height 50px
            background-color brown
            color #FFF
            text-align center
            line-height 50px
        .menu-item
            width 100%
            border-bottom 1px solid #AAA
            background-color #EFEFEF
            .menu-item-title
                color #888
                text-transform uppercase
                margin-left 10px
                line-height 50px
                .chevron
                    float right
                    line-height 50px
                    margin-right 15px
                    pointer-events none
                &:hover
                    cursor pointer
            .menu-item-content
                width 100%
                max-height 0
                padding 0
                background-color #FFF
                transition 0.5s all ease-in-out
                overflow-y scroll
                &.active
                    max-height 300px
                    padding 10px 0
                    transition 0.5s all ease-in-out
    .map-area
        width 69%
        max-height 90vh
        overflow hidden