/* You can add global styles to this file, and also import other style files */
@import "~@angular/material/prebuilt-themes/indigo-pink.css"
body
    padding 0
    margin 0
    font-size 1em
    font-family 'Roboto', sans-serif
    font-weight 200
    -webkit-font-smoothing antialiased
.main-content
    width 100vw
    height 92vh
    overflow auto
    .container
        width 90%
        height 100%
        margin 20px auto
/* HELPERS */
.valign-helper
    display inline-block
    width 0
    height 100%
    vertical-align middle
.clear10
    clear both
    height 10px
.clear20
    clear both
    height 20px
.clear50
    clear both
    height 50px
.alert
    width 100%
    height 35px
    line-height 35px
    padding 0 10px
    color #ffffff
    border-radius 5px
    &.alert-danger
        background-color rgba(255,0,0,0.6)
    &.alert-success
        background-color rgba(0,255,0,0.6)
.full-btn
    width 100%
    margin-bottom 5px
.ng-valid[required], .ng-valid.required
  border-left 5px solid #42A948 /* green */
.ng-invalid:not(form)
  border-left 5px solid #a94442 /* red */